@inject IArticleRepository articleRep
@{
    var categories = await articleRep.GetCategoriesAsync();
}
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">دسته بندی ها<span class="caret"></span></a>
    <ul class="dropdown-menu">
        @foreach (var item in categories)
        {
            <li>
                <a class="d-flex justify-content-between" href="/articles/category/@item.CategoryTitle">
                @item.CategoryTitle <span class="badge">@item.ArticleCount</span>
            </a></li>
        }
    </ul>
</li>