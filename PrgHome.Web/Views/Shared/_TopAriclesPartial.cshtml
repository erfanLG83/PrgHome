@inject IArticleRepository articleRep
@{
    var articles = await articleRep.GetTopArticlesAsync();
}
    <div class="abt-2">
        <h3>مقالات برتر</h3>
        @foreach (var item in articles)
        {
            <div class="might-grid">
                <div class="grid-might">
                    <div class="d-flex article-img-container"><img src="@(item.Image==null?"~/images/article.png":"/Files/"+item.Image)" class="img-responsive" alt=""> </div>
                </div>
                <div class="might-top">
                    <h4>
                        <a href="/articles/show/@item.Title">
                            @item.Title
                        </a>
                    </h4>
                    <div  class="state-container space-evenly mt-20">
                        <span class="state"><i class="glyphicon glyphicon-eye-open"> </i>@item.View</span>
                        <span class="state date">@item.PublishDate</span>
                    </div>
                    <p>@item.Description</p>
                    <div class="a-btn"> 
                        <a href="/articles/show/@item.Title">
                            ادامه مطلب
                        </a>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        }
    </div>
